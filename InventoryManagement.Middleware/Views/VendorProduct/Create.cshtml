@model InventoryManagement.Service.Models.VendorProduct
@{
    ViewData["Title"] = "Create Vendor-Product Relationship";
    var vendorsAvailable = ViewBag.Vendors != null && ((List<InventoryManagement.Service.Models.Vendor>)ViewBag.Vendors).Count > 0;
var productsAvailable = ViewBag.Products != null && ((List<InventoryManagement.Service.Models.Product>)ViewBag.Products).Count > 0;
    var canCreate = vendorsAvailable && productsAvailable;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <i class="fas fa-link"></i> Create Vendor-Product Relationship
                    </h4>
                </div>
                <div class="card-body">
                    @if (!canCreate)
                    {
                        <div class="alert alert-warning">
                            <strong>Cannot create a Vendor-Product Relationship.</strong><br />
                            Please make sure you have added at least one vendor and one product before creating a relationship.<br />
                            <a href="@Url.Action("Index", "Vendor")" class="btn btn-warning btn-sm mt-2">Manage Vendors</a>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-info btn-sm mt-2">Manage Products</a>
                        </div>
                    }
                    @if (canCreate)
                    {
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <strong>There were errors with your submission:</strong>
                                <ul>
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }
                        <form asp-action="Create" method="post">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="VendorId" class="form-label">Vendor *</label>
                                        <select asp-for="VendorId" class="form-control" required>
                                            <option value="">Select Vendor</option>
                                            @if (ViewBag.Vendors != null)
                                            {
                                                @foreach (var vendor in ViewBag.Vendors as List<InventoryManagement.Service.Models.Vendor>)
                                                {
                                                    <option value="@vendor.Id">@vendor.Name</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="VendorId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="ProductId" class="form-label">Product *</label>
                                        <select asp-for="ProductId" class="form-control" required>
                                            <option value="">Select Product</option>
                                            @if (ViewBag.Products != null)
                                            {
                                                @foreach (var product in ViewBag.Products as List<InventoryManagement.Service.Models.Product>)
                                                {
                                                    <option value="@product.Id">@product.Name (@product.Category)</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="ProductId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="Price" class="form-label">Price *</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                        </div>
                                        <span asp-validation-for="Price" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="Unit" class="form-label">Unit *</label>
                                        <select asp-for="Unit" class="form-control" required>
                                            <option value="">Select Unit</option>
                                            @if (ViewBag.Units != null)
                                            {
                                                @foreach (var unit in ViewBag.Units as List<string>)
                                                {
                                                    <option value="@unit">@unit</option>
                                                }
                                            }
                                        </select>
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="LeadTimeDays" class="form-label">Lead Time (Days)</label>
                                        <input asp-for="LeadTimeDays" type="number" min="0" class="form-control" value="7" />
                                        <span asp-validation-for="LeadTimeDays" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="VendorProductCode" class="form-label">Vendor Product Code</label>
                                        <input asp-for="VendorProductCode" class="form-control" placeholder="Vendor's internal product code" />
                                        <span asp-validation-for="VendorProductCode" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="MinOrderQuantity" class="form-label">Minimum Order Quantity</label>
                                        <input asp-for="MinOrderQuantity" type="number" step="0.01" min="0" class="form-control" value="1" />
                                        <span asp-validation-for="MinOrderQuantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="IsPreferredVendor" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsPreferredVendor" class="form-check-label">
                                            Preferred Vendor for this Product
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mb-3">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Active Relationship
                                        </label>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Create Relationship
                                </button>
                                <a href="@Url.Action("Index")" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title"><i class="fas fa-info-circle text-info"></i> About Vendor-Product Relationships</h6>
                    <p class="card-text text-muted">
                        Vendor-Product relationships define which vendors can supply which products, along with pricing, 
                        lead times, and other vendor-specific information. This enables better inventory management 
                        and vendor comparison.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
