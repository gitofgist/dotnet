<!-- Views/Product/Index.cshtml -->
@model IEnumerable<InventoryManagement.Service.Models.Product>
@{
    ViewData["Title"] = "Product Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-boxes"></i> Product Management
                </h2>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Product
                    </a>
                    <a href="@Url.Action("Index", "VendorProduct")" class="btn btn-info">
                        <i class="fas fa-link"></i> Manage Vendor Products
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                        <i class="fas fa-home"></i> Back to Home
                    </a>
                </div>
            </div>
            
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Products (@Model.Count())</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Category</th>
                                        <th>Brand</th>
                                        <th>Vendors</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td><strong>@product.Name</strong></td>
                                            <td>@product.Description</td>
                                            <td>@product.Category</td>
                                            <td>@product.Brand</td>
                                            <td>
                                                @if (product.VendorProducts.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-1">
                                                        @foreach (var vp in product.VendorProducts.Take(3))
                                                        {
                                                            <span class="badge bg-primary">@vp.Vendor.Name</span>
                                                        }
                                                        @if (product.VendorProducts.Count > 3)
                                                        {
                                                            <span class="badge bg-secondary">+@(product.VendorProducts.Count - 3) more</span>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No vendors</span>
                                                }
                                            </td>
                                            <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = product.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (!product.ProductEntries.Any())
                                                {
                                                    <form asp-action="Delete" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@product.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirm('Are you sure you want to delete this product?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled 
                                                            title="Cannot delete product with inventory entries">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-box fa-4x text-muted"></i>
                        </div>
                        <h4 class="mb-3">No Products Yet</h4>
                        <p class="text-muted mb-4">
                            Add products to your catalog to start managing inventory.
                        </p>
                        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                            <i class="fas fa-plus"></i> Add Your First Product
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>