@model IEnumerable<InventoryManagement.Service.Models.Vendor>
@{
    ViewData["Title"] = "Vendor Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-truck"></i> Vendor Management
                </h2>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add New Vendor
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                        <i class="fas fa-boxes"></i> Back to Inventory
                    </a>
                </div>
            </div>
            
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Vendors (@Model.Count())</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Address</th>
                                        <th>Phone</th>
                                        <th>Email</th>
                                        <th>Items Supplied</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vendor in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@vendor.Name</strong>
                                            </td>
                                            <td>@vendor.Address</td>
                                            <td>
                                                <a href="tel:@vendor.Phone" class="text-decoration-none">
                                                    <i class="fas fa-phone text-success"></i> @vendor.Phone
                                                </a>
                                            </td>
                                            <td>
                                                <a href="mailto:@vendor.Email" class="text-decoration-none">
                                                    <i class="fas fa-envelope text-primary"></i> @vendor.Email
                                                </a>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">@vendor.ProductEntries.Count items</span>
                                            </td>
                                            <td>@vendor.CreatedAt.ToString("MM/dd/yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = vendor.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                @if (vendor.ProductEntries.Count == 0)
                                                {
                                                    <form asp-action="Delete" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@vendor.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                                onclick="return confirm('Are you sure you want to delete this vendor?')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-secondary" disabled 
                                                            title="Cannot delete vendor with associated items">
                                                        <i class="fas fa-lock"></i>
                                                    </button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-truck fa-4x text-muted"></i>
                        </div>
                        <h4 class="mb-3">No Vendors Yet</h4>
                        <p class="text-muted mb-4">
                            Add vendors to track who supplies your inventory items.
                        </p>
                        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                            <i class="fas fa-plus"></i> Add Your First Vendor
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
