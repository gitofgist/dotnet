@model IEnumerable<InventoryManagement.Service.Models.Inventory>
@{
    ViewData["Title"] = "Inventory Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Inventory Management System</h2>
            
            @if (Model.Any())
            {
                <!-- Enhanced Dropdown Interface -->
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-sm">
                            <div class="card-body text-center py-5">
                                <h4 class="mb-4">
                                    <i class="fas fa-boxes text-primary"></i> 
                                    Select Inventory to Manage
                                </h4>
                                
                                <form asp-action="SelectInventory" method="post" class="row justify-content-center">
                                    <div class="col-md-8">
                                        <div class="input-group input-group-lg mb-3">
                                            <span class="input-group-text">
                                                <i class="fas fa-search"></i>
                                            </span>
                                            <select name="selectedInventoryId" class="form-select" required>
                                                <option value="">Choose an inventory...</option>
                                                @foreach (var inventory in Model.OrderBy(i => i.Name))
                                                {
                                                    <option value="@inventory.Id">
                                                        @inventory.Name 
                                                        @if (inventory.ProductEntries.Count > 0)
                                                        {
                                                            <text>(@inventory.ProductEntries.Count items)</text>
                                                        }
                                                        else
                                                        {
                                                            <text>(Empty)</text>
                                                        }
                                                    </option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-arrow-right"></i> Go
                                            </button>
                                        </div>
                                    </div>
                                </form>
                                
                                <div class="mt-4">
                                    <a href="@Url.Action("CreateInventory")" class="btn btn-outline-success btn-lg">
                                        <i class="fas fa-plus"></i> Create New Inventory
                                    </a>
                                </div>
                                
                                <!-- Quick Stats -->
                                <div class="row mt-4">
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <h5 class="text-primary mb-0">@Model.Count()</h5>
                                            <small class="text-muted">Total Inventories</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <h5 class="text-success mb-0">@Model.Sum(i => i.ProductEntries.Count)</h5>
                                            <small class="text-muted">Total Items</small>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="text-center">
                                            <h5 class="text-info mb-0">@Model.Count(i => i.ProductEntries.Any())</h5>
                                            <small class="text-muted">Active Inventories</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card shadow-sm">
                            <div class="card-body text-center py-5">
                                <div class="mb-4">
                                    <i class="fas fa-box-open fa-4x text-muted"></i>
                                </div>
                                <h4 class="mb-3">No Inventories Yet</h4>
                                <p class="text-muted mb-4">
                                    Get started by creating your first inventory to manage your products and items.
                                </p>
                                <a href="@Url.Action("CreateInventory")" class="btn btn-primary btn-lg">
                                    <i class="fas fa-plus"></i> Create Your First Inventory
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
