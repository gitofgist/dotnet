@model IEnumerable<InventoryManagement.Interface.VendorProduct.VendorProduct>
@{
    ViewData["Title"] = "Vendor-Product Relationships";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-link"></i> Vendor-Product Relationships
                </h2>
                <div>
                    <a href="@Url.Action("Create")" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add Vendor-Product
                    </a>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-info">
                        <i class="fas fa-boxes"></i> Manage Products
                    </a>
                    <a href="@Url.Action("Index", "Vendor")" class="btn btn-warning">
                        <i class="fas fa-truck"></i> Manage Vendors
                    </a>
                </div>
            </div>
            
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            @if (Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5>Vendor-Product Relationships (@Model.Count())</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Vendor</th>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Unit</th>
                                        <th>Lead Time</th>
                                        <th>Min Order</th>
                                        <th>Preferred</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vp in Model)
                                    {
                                        <tr class="@(vp.IsActive ? "" : "table-secondary")">
                                            <td>
                                                <strong>@vp.Vendor.Name</strong><br>
                                                <small class="text-muted">@vp.Vendor.Phone</small>
                                            </td>
                                            <td>
                                                <strong>@vp.Product.Name</strong><br>
                                                <small class="text-muted">@vp.Product.Category</small>
                                            </td>
                                            <td>$@vp.Price.ToString("N2")</td>
                                            <td>@vp.Unit</td>
                                            <td>@vp.LeadTimeDays days</td>
                                            <td>@vp.MinOrderQuantity</td>
                                            <td>
                                                @if (vp.IsPreferredVendor)
                                                {
                                                    <span class="badge bg-success">Preferred</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Standard</span>
                                                }
                                            </td>
                                            <td>
                                                @if (vp.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Edit", new { id = vp.Id })" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form asp-action="Delete" method="post" style="display:inline;">
                                                    <input type="hidden" name="id" value="@vp.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this relationship?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-link fa-4x text-muted"></i>
                        </div>
                        <h4 class="mb-3">No Vendor-Product Relationships Yet</h4>
                        <p class="text-muted mb-4">
                            Link vendors to products to track who supplies what and at what price.
                        </p>
                        <a href="@Url.Action("Create")" class="btn btn-success btn-lg">
                            <i class="fas fa-plus"></i> Create Your First Relationship
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>