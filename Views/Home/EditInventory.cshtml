@model InventoryManagement.Interface.Inventory.Inventory
@{
    ViewData["Title"] = "Edit Inventory - " + Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2>@Model.Name Inventory</h2>
                    <p class="text-muted">@Model.Description</p>
                </div>
                <div>
                    <a href="@Url.Action("Index", "Vendor")" class="btn btn-outline-info">
                        <i class="fas fa-truck"></i> Manage Vendors
                    </a>
                </div>
            </div>
            
            <!-- Success/Error Messages -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            
            <!-- Add Product Entry Form -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5>Add New Product Entry</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Vendors != null && ((List<InventoryManagement.Server.Vendor.Vendor>)ViewBag.Vendors).Any())
                    {
                        <form asp-action="AddProductEntry" method="post">
                            <input type="hidden" name="inventoryId" value="@Model.Id" />
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="ProjectId" class="form-label">Project ID</label>
                                        <input name="ProjectId" class="form-control" placeholder="PRJ-001" required maxlength="50" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="ProductName" class="form-label">Product Name</label>
                                        <input name="ProductName" class="form-control" placeholder="Enter product name" required maxlength="200" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="VendorId" class="form-label">Vendor</label>
                                        <select name="VendorId" class="form-control" required>
                                            <option value="">Select Vendor</option>
                                            @foreach (var vendor in (List<InventoryManagement.Server.Vendor.Vendor>)ViewBag.Vendors)
                                            {
                                                <option value="@vendor.Id">@vendor.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <div class="form-group">
                                        <label for="Unit" class="form-label">Unit</label>
                                        <select name="Unit" class="form-control" required>
                                            <option value="">Unit</option>
                                            @if (ViewBag.Units != null)
                                            {
                                                @foreach (var unit in ViewBag.Units as List<string>)
                                                {
                                                    <option value="@unit">@unit</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label for="Quantity" class="form-label">Quantity</label>
                                        <input name="Quantity" type="number" step="0.01" min="0.01" class="form-control" placeholder="0.00" required />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <button type="submit" class="btn btn-success d-block w-100">
                                            <i class="fas fa-plus"></i> Add
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> 
                            No vendors available. Please 
                            <a href="@Url.Action("Create", "Vendor")" class="alert-link">add a vendor first</a> 
                            before adding product entries.
                        </div>
                    }
                </div>
            </div>
            
            <!-- Product Entries List -->
            <div class="card">
                <div class="card-header">
                    <h5>Product Entries (@Model.ProductEntries.Count items)</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProductEntries.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Project ID</th>
                                        <th>Product Name</th>
                                        <th>Vendor</th>
                                        <th>Phone</th>
                                        <th>Unit</th>
                                        <th>Quantity</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model.ProductEntries.OrderByDescending(p => p.CreatedAt))
                                    {
                                        <tr>
                                            <td>@entry.ProjectId</td>
                                            <td>@entry.ProductName</td>
                                            <td>
                                                @if (entry.Vendor != null)
                                                {
                                                    <strong>@entry.Vendor.Name</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (entry.Vendor != null)
                                                {
                                                    <a href="tel:@entry.Vendor.Phone" class="text-decoration-none">
                                                        <i class="fas fa-phone text-success"></i> @entry.Vendor.Phone
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>@entry.Unit</td>
                                            <td>@entry.Quantity.ToString("N2")</td>
                                            <td>@entry.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                            <td>
                                                <form asp-action="DeleteProductEntry" method="post" style="display:inline;">
                                                    <input type="hidden" name="id" value="@entry.Id" />
                                                    <input type="hidden" name="inventoryId" value="@Model.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                            onclick="return confirm('Are you sure you want to delete this entry?')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No product entries found. Add your first product entry above.
                        </div>
                    }
                </div>
            </div>
            
            <div class="mt-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Inventories
                </a>
            </div>
        </div>
    </div>
</div>

<script>
// Add some client-side validation feedback
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form[asp-action="AddProductEntry"]');
    if (form) {
        form.addEventListener('submit', function(e) {
            const projectId = form.querySelector('input[name="ProjectId"]').value.trim();
            const productName = form.querySelector('input[name="ProductName"]').value.trim();
            const vendorId = form.querySelector('select[name="VendorId"]').value;
            const unit = form.querySelector('select[name="Unit"]').value;
            const quantity = form.querySelector('input[name="Quantity"]').value;
            
            if (!projectId || !productName || !vendorId || !unit || !quantity || parseFloat(quantity) <= 0) {
                e.preventDefault();
                alert('Please fill in all fields with valid values.');
                return false;
            }
        });
    }
});
</script>